{
    "compilerOptions": {
        "target": "es5", // compile to es5 since to build a package with browser compatibility.
        "lib": ["dom", "es7"],
        "outDir": "./lib",
        "strict": true,
        "esModuleInterop": true,
        "allowJs": true
    },
    "include": ["src/**/*.ts", "dev/**/*.ts", "./*.js"],
    "exclude": ["node_modules", "src/**/*.test.ts"]
}
