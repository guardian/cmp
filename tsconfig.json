{
	"compilerOptions": {
		"allowJs": true,
		"declaration": true,
		"esModuleInterop": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"lib": ["DOM", "ES5"],
		"module": "ESNext",
		"moduleResolution": "node",
		"noEmit": true,
		"outDir": "dist",
		"rootDir": "src",
		"strict": true,
		"target": "esnext"
	},
	"files": ["src/index.ts"],
	"exclude": ["node_modules", "dist", "coverage", "**/*.test.js"],
	"include": ["src"]
}
