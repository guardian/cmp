{
	"extends": "@guardian/tsconfig",
	"compilerOptions": {
		"allowSyntheticDefaultImports": true,
		"incremental": true,
		"noImplicitReturns": true,
		"noUncheckedIndexedAccess": true,
		"noUnusedLocals": true,
		"resolveJsonModule": true,
		"allowJs": true,
		"isolatedModules": true,
		"noEmit": true,
		"removeComments": true
	},
	"include": ["src", ".eslintrc.js", "*.config.js"]
}
