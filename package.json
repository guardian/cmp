{
	"name": "@guardian/consent-management-platform",
	"version": "4.3.0",
	"description": "Consent management for *.theguardian.com.",
	"homepage": "https://github.com/guardian/consent-management-platform.git",
	"repository": "https://github.com/guardian/consent-management-platform.git",
	"license": "Apache-2.0",
	"main": "dist/index.js",
	"module": "dist/index.esm.js",
	"types": "dist/index.d.ts",
	"files": [
		"dist/**/*"
	],
	"scripts": {
		"build": "npm-run-all clean --parallel compile types",
		"clean": "npm-run-all --parallel clean:*",
		"clean:dist": "rm -rf dist/*",
		"clean:test-page": "rm -rf .test-page/*",
		"compile": "rollup --config",
		"dev": "yarn clean && yarn compile --watch",
		"fix": "yarn lint --fix",
		"gh-pages:build": "yarn build",
		"gh-pages:serve": "yarn gh-pages:build && serve .test-page",
		"lint": "eslint . --ext=js,ts,tsx",
		"prepublishOnly": "yarn build",
		"readme-toc:commit": "git add README.md && git commit -m 'Update README toc' || true",
		"readme-toc:generate": "markdown-toc README.md -i --maxdepth=3",
		"release": "np",
		"test": "npm-run-all test:unit test:e2e",
		"test:e2e": "start-server-and-test 'yarn test:e2e:serve' http://localhost:10001 'yarn cypress run'",
		"test:e2e:serve": "rollup --config --watch",
		"test:e2e:ui": "start-server-and-test 'yarn test:e2e:serve --watch' http://localhost:10001 'cypress open'",
		"test:unit": "jest --coverage",
		"tsc": "tsc",
		"types": "tsc --project ./tsconfig.build.json",
		"validate": "npm-run-all tsc test lint build gh-pages:build"
	},
	"husky": {
		"hooks": {
			"pre-push": "npm-run-all readme-toc:generate readme-toc:commit"
		}
	},
	"devDependencies": {
		"@babel/core": "^7.11.6",
		"@babel/plugin-proposal-class-properties": "^7.10.4",
		"@babel/plugin-transform-runtime": "^7.11.5",
		"@babel/preset-env": "^7.11.5",
		"@babel/preset-typescript": "^7.10.4",
		"@babel/runtime": "^7.11.2",
		"@cypress/skip-test": "^2.5.0",
		"@rollup/plugin-babel": "^5.2.1",
		"@rollup/plugin-commonjs": "^15.0.0",
		"@rollup/plugin-html": "^0.2.0",
		"@rollup/plugin-node-resolve": "^9.0.0",
		"@rollup/plugin-replace": "^2.3.3",
		"@rollup/plugin-strip": "^2.0.0",
		"@types/jest": "^26.0.13",
		"@typescript-eslint/eslint-plugin": "^4.1.1",
		"@typescript-eslint/parser": "^4.1.1",
		"cypress": "^5.2.0",
		"eslint": "^7.9.0",
		"eslint-config-airbnb-typescript": "^10.0.0",
		"eslint-config-prettier": "^6.11.0",
		"eslint-plugin-cypress": "^2.11.1",
		"eslint-plugin-import": "^2.22.0",
		"eslint-plugin-jest": "^24.0.1",
		"eslint-plugin-prettier": "^3.1.4",
		"eslint-plugin-svelte3": "^2.7.3",
		"husky": "^4.3.0",
		"jest": "^26.4.2",
		"markdown-toc": "^1.2.0",
		"np": "^6.5.0",
		"npm-run-all": "^4.1.5",
		"prettier": "^2.1.2",
		"prettier-plugin-svelte": "^1.2.1",
		"rollup": "^2.27.0",
		"rollup-plugin-livereload": "^2.0.0",
		"rollup-plugin-serve": "^1.0.4",
		"rollup-plugin-svelte": "^6.0.1",
		"rollup-plugin-terser": "^7.0.2",
		"serve": "^11.3.2",
		"start-server-and-test": "^1.11.3",
		"svelte": "^3.25.1",
		"typescript": "^4.0.2",
		"wait-for-expect": "^3.0.2"
	},
	"peerDependencies": {
		"@babel/runtime": "^7.11.2"
	}
}
