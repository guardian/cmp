{
    "name": "@guardian/consent-management-platform",
    "version": "3.0.4",
    "description": "Library of useful utilities for managing consent state across *.theguardian.com",
    "main": "lib/index.js",
    "types": "lib/index.d.ts",
    "scripts": {
        "build": "yarn clean && rollup --config && yarn build:types",
        "clean": "rm -rf lib/*",
        "cy": "cypress open",
        "cy:run": "cypress run",
        "build:types": "tsc --emitDeclarationOnly -d -m commonjs ",
        "dev": "yarn serve-dev --watch",
        "fix": "yarn lint --fix",
        "lint": "eslint src/**/*.ts",
        "prepublishOnly": "yarn build",
        "serve-dev": "rollup --config rollup.config.dev.js",
        "test": "yarn test:unit && yarn test:integration",
        "test:integration": "start-server-and-test serve-dev http://localhost:10001 cy:run",
        "test:unit": "jest --config jestconfig.json",
        "tsc": "tsc --noEmit",
        "validate": "yarn tsc && yarn lint && yarn test",
        "gh-pages:build": "rollup --config rollup.config.gh-pages.js",
        "release": "np --preview"
    },
    "repository": "https://github.com/guardian/consent-management-platform.git",
    "homepage": "https://github.com/guardian/consent-management-platform.git",
    "author": "George Haberis <george.haberis@guardian.co.uk>",
    "contributors": [
        "Ricardo Costa <ricardo.costa@guardian.co.uk>"
    ],
    "license": "Apache-2.0",
    "dependencies": {
        "consent-string": "^1.5.1",
        "js-cookie": "^2.2.1",
        "whatwg-fetch": "^3.0.0"
    },
    "devDependencies": {
        "@babel/core": "^7.6.4",
        "@babel/plugin-proposal-class-properties": "^7.5.5",
        "@babel/preset-env": "^7.6.3",
        "@babel/preset-typescript": "^7.6.0",
        "@rollup/plugin-html": "^0.2.0",
        "@types/jest": "^24.0.16",
        "@types/js-cookie": "^2.2.2",
        "@typescript-eslint/eslint-plugin": "^2.30.0",
        "@typescript-eslint/parser": "^2.30.0",
        "cypress": "4.2.0",
        "eslint": "^6.8.0",
        "eslint-config-prettier": "^6.11.0",
        "eslint-plugin-jest": "^23.9.0",
        "eslint-plugin-prettier": "^3.1.3",
        "jest": "^24.8.0",
        "np": "6.2.3",
        "prettier": "^1.18.2",
        "rollup": "^2.6.1",
        "rollup-plugin-babel": "^4.4.0",
        "rollup-plugin-commonjs": "^10.1.0",
        "rollup-plugin-livereload": "1.3.0",
        "rollup-plugin-node-resolve": "^5.2.0",
        "rollup-plugin-replace": "^2.2.0",
        "rollup-plugin-serve": "^1.0.1",
        "start-server-and-test": "^1.11.0",
        "ts-jest": "^24.0.2",
        "typescript": "~3.5.3"
    },
    "files": [
        "lib/**/*"
    ]
}
