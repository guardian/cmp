{
  "name": "monitoring",
  "version": "1.0.0",
  "type": "module",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "test": "jest",
    "test:dev": "jest --watch",
    "lint": "eslint src/** localRun.ts",
    "start": "tsc --noEmit && node --loader ts-node/esm localRun.ts",
    "remote": "tsc --noEmit && node --loader ts-node/esm remoteRun.ts",
    "type-check": "tsc --noEmit",
    "bundle": "esbuild src/index.ts --bundle --format=esm --outdir=dist --external:aws-sdk --platform=node --inject:./src/cjs-shim.ts",
    "copy-assets": "cp ./node_modules/.pnpm/playwright-core@1.45.1/node_modules/playwright-core/lib/server/electron/loader.js ./dist/; cp ./node_modules/.pnpm/playwright-core@1.45.1/node_modules/playwright-core/lib/server/chromium/appIcon.png ./dist/",
		"buildold": "ncc build src/index.ts -o dist -e aws-sdk",
		"build": "run-s --print-label bundle type-check bundle",
		"validate": "npm-run-all test lint build"
  },
  "dependencies": {
    "@aws-sdk/client-cloudwatch": "^3.609.0",
    "commander": "^12.1.0",
    "dotenv": "^16.4.5",
    "inquirer": "^9.3.2",
    "playwright-aws-lambda": "^0.10.0",
    "playwright-core": "^1.45.1",
    "tslib": "^2.6.3",
    "uuid": "^10.0.0"
  },
  "devDependencies": {
    "@aws-sdk/client-lambda": "^3.609.0",
    "@babel/parser": "^7.24.7",
    "@guardian/eslint-config-typescript": "^10.0.1",
    "@guardian/prettier": "^8.0.1",
    "@guardian/tsconfig": "^1.0.0",
    "@tsconfig/node18": "^18.2.4",
    "@types/aws-lambda": "^8.10.140",
    "@types/inquirer": "^9.0.7",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.14.9",
    "aws-lambda": "^1.0.7",
    "esbuild": "^0.23.0",
    "eslint": "^9.6.0",
    "eslint-plugin-compat": "^5.0.0",
    "globals": "^15.8.0",
    "jest": "^29.7.0",
    "markdown-toc": "^1.2.0",
    "npm-run-all": "^4.1.5",
    "ts-jest": "^29.1.5",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "5.5.3",
    "typescript-eslint": "^7.15.0",
		"@vercel/ncc": "^0.38.1"
  },
  "prettier": "@guardian/prettier",
  "overrides": {
    "clone-deep": "4.0.1"
  }
}
